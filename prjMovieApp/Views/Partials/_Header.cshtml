@using WebApp.LIB.Common
@{ 
    var user = CommonBase.CurrentUserInfo;
}
<header>
    <button class="button left">
        <label for=navigation>
            <svg width=24 height=24 viewBox="0 0 24 24">
                <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"></path>
            </svg>
        </label>
    </button><a href="/" class=logo target="_blank">BIG STAR</a>

    @if (user == null)
    {
        <a href=#popUp id=openPopUp>
            <button class="button right">
                <div class=icon>
                    <img src="~/Images/login-rounded-up.png" />

                </div>
            </button>
        </a>
    }
    else
    {
        <a>
            <div class="button right">
                <span class="span-login">@user.UserName</span>
            </div>
        </a>
    }


</header>
